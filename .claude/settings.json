{
  "permissions": {
    "allow": [
      "Read(*)",
      "Edit(*)",
      "Write(*)",
      "Glob(*)",
      "Grep(*)",
      "NotebookEdit(*)",
      "WebFetch(*)",
      "WebSearch(*)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "writePaths": [
      "/tmp"
    ],
    "network": {
      "allowedDomains": [
        "github.com",
        "api.github.com",
        "crates.io",
        "index.crates.io",
        "static.crates.io"
      ]
    }
  }
}
